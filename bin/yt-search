#!/usr/bin/env node

const { spawn } = require('child_process');
const path = require('path');
const fs = require('fs');

// Path to the Python script
const scriptPath = path.join(__dirname, '..', 'yt_search', 'main.py');

// Check if Python is installed
const pythonCmd = process.platform === 'win32' ? 'python' : 'python3';

// Get command line arguments (skip first two: node and script path)
const args = process.argv.slice(2);

// Check if the Python script exists
if (!fs.existsSync(scriptPath)) {
    console.error('Error: YT-Search Python files not found.');
    console.error('Please reinstall the package.');
    process.exit(1);
}

// Spawn Python process
const python = spawn(pythonCmd, ['-m', 'yt_search.main', ...args], {
    stdio: 'inherit',
    cwd: path.join(__dirname, '..')
});

python.on('error', (err) => {
    if (err.code === 'ENOENT') {
        console.error('Error: Python 3 is not installed or not in PATH.');
        console.error('Please install Python 3.7 or higher.');
    } else {
        console.error('Error starting YT-Search:', err);
    }
    process.exit(1);
});

python.on('exit', (code) => {
    process.exit(code);
});
